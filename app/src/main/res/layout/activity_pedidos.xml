<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_padrao2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10sp"
                android:text="Controle de Pedidos"
                android:textColor="@color/Branco"
                android:textSize="28sp" />

            <Button
                android:id="@+id/BtnVoltar_Pedidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Deslogar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Nome_almo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10sp"
                android:text="Nome:"
                android:textColor="@color/Branco"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/Nome_almo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Branco"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/BtnEstoque_Pedidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estoque" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/BtnEntrada_Pedidos"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Registro de Entrada" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/BtnSaída_Pedidos"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Registro de Saída" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BtnCadastrar_Pedidos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar Produtos" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/List_tela_de_pedidos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp" />

            <TextView
                android:id="@+id/quant_hist"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/prod_hist"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/nome_hist"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/descrião_hist"
                android:layout_width="1sp"
                android:layout_height="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/imagem_hist"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/Codigo_hist"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/Nome_pegar"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:text="TextView" />

            <Button
                android:id="@+id/Aceitar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_weight="0"
                android:text="Aceitar" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>