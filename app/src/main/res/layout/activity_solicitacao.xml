<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_padrao2">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5sp"
                android:text="Solicitação"
                android:textColor="@color/Branco"
                android:textSize="28dp" />

            <Space
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/Btn_Voltar_Solicitação"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Botão_Voltar" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <Spinner
                android:id="@+id/Spinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:textColor="@color/Branco"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/EdtQuantP_Solicitação"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:text="@string/Código"
                android:textColor="@color/Branco"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/TvCódigoP_Solicitação"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="003"
                android:textColor="@color/Branco"
                android:textSize="18sp" />

            <Button
                android:id="@+id/BtnAddP_Solicitação"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adicionar" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="69dp"
        android:layout_marginLeft="4dp"
        android:text="Solicitante:"
        android:textColor="@color/Branco"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/TvNomeP_Solicitação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="Davi"
        android:textColor="@color/Branco"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView41"
        app:layout_constraintStart_toEndOf="@+id/textView41"
        app:layout_constraintTop_toTopOf="@+id/textView41"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:background="@color/Padrão"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Padrão_escuro"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginEnd="40sp"
                    android:layout_marginRight="40sp"
                    android:layout_weight="1"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="Código"
                    android:textColor="@color/Branco"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:layout_marginLeft="15sp"
                    android:layout_marginEnd="15sp"
                    android:layout_marginRight="15sp"
                    android:layout_weight="1"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="Produto"
                    android:textColor="@color/Branco"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40sp"
                    android:layout_marginLeft="40sp"
                    android:layout_marginEnd="40sp"
                    android:layout_marginRight="40sp"
                    android:layout_weight="1"
                    android:paddingLeft="5sp"
                    android:paddingRight="5sp"
                    android:text="Quant."
                    android:textColor="@color/Branco"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TvCódigoE_Solicitação1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Branco"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TvNomeE_Solicitação1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/Branco"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TvQuantE_Solicitação1"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Branco"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TvCódigoE_Solicitação2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Branco"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TvNomeE_Solicitação2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/Branco"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TvQuantE_Solicitação2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Branco"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/TvCódigoE_Solicitação3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Branco"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TvNomeE_Solicitação3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textColor="@color/Branco"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/TvQuantE_Solicitação3"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Branco"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/BtnCancelar_Solicitação"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/BtnEnviar_Solicitação"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enviar" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>