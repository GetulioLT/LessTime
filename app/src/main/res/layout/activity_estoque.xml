<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_padrao2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5sp"
                android:text="Controle de Estoque"
                android:textColor="@color/Branco"
                android:textSize="24sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnVoltar_Estoque"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/Botão_Voltar" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="105dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/Padrão_escuro"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="Produto"
                android:textColor="@color/Branco"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="Quant."
                android:textColor="@color/Branco"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:text="Código"
                android:textColor="@color/Branco"
                android:textSize="16sp" />

        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/Estoque_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5sp" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>